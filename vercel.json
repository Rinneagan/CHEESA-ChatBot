{
  "version": 2,
  "builds": [
    {
      "src": "src/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/index.mjs"
    },
    {
      "src": "^/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "^/(?!api/|_next/|_static/|_vercel|[\\w-]+\\.[\\w]+$)",
      "status": 200,
      "dest": "/public/index.html"
    }
  ]
}
